<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_steel_blue"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnC"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="@string/btn_c"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSeven"
        app:layout_constraintEnd_toStartOf="@+id/btnBack"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="@string/btn_back"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnEight"
        app:layout_constraintEnd_toStartOf="@+id/btnDivision"
        app:layout_constraintStart_toEndOf="@+id/btnC" />

    <Button
        android:id="@+id/btnDivision"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="@string/btn_delete"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnNine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnBack" />

    <Button
        android:id="@+id/btnSeven"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="@string/btn_seven"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnFour"
        app:layout_constraintEnd_toStartOf="@+id/btnEight"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnEight"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="@string/btn_eight"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnFive"
        app:layout_constraintEnd_toStartOf="@+id/btnNine"
        app:layout_constraintStart_toEndOf="@+id/btnSeven" />

    <Button
        android:id="@+id/btnNine"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="@string/btn_nine"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSix"
        app:layout_constraintEnd_toStartOf="@+id/btnMultiplication"
        app:layout_constraintStart_toEndOf="@+id/btnEight" />

    <Button
        android:id="@+id/btnMultiplication"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="@string/btn_multiplication_sign"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSubtraction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnNine" />

    <Button
        android:id="@+id/btnFour"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="@string/btn_four"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnOne"
        app:layout_constraintEnd_toStartOf="@+id/btnFive"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnFive"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="@string/btn_five"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnTwo"
        app:layout_constraintEnd_toStartOf="@+id/btnSix"
        app:layout_constraintStart_toEndOf="@+id/btnFour" />

    <Button
        android:id="@+id/btnSix"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="@string/btn_six"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnTree"
        app:layout_constraintEnd_toStartOf="@+id/btnSubtraction"
        app:layout_constraintStart_toEndOf="@+id/btnFive" />

    <Button
        android:id="@+id/btnSubtraction"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="@string/btn_minus"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAddition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnSix" />

    <Button
        android:id="@+id/btnOne"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:text="@string/btn_one"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnPlusMinus"
        app:layout_constraintEnd_toStartOf="@+id/btnTwo"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnTwo"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="@string/btn_two"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnNull"
        app:layout_constraintEnd_toStartOf="@+id/btnTree"
        app:layout_constraintStart_toEndOf="@+id/btnOne" />

    <Button
        android:id="@+id/btnTree"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="@string/btn_tree"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnComma"
        app:layout_constraintEnd_toStartOf="@+id/btnAddition"
        app:layout_constraintStart_toEndOf="@+id/btnTwo" />

    <Button
        android:id="@+id/btnAddition"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="@string/btn_plus"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnEqual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnTree" />

    <Button
        android:id="@+id/btnPlusMinus"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="@string/btn_plus_and_minus"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnNull"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnNull"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="@string/btn_null"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnComma"
        app:layout_constraintStart_toEndOf="@+id/btnPlusMinus"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/btnComma"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="@string/btn_comma"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnEqual"
        app:layout_constraintStart_toEndOf="@+id/btnNull" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:text="@string/btn_equal_sign"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnComma" />

    <TextView
        android:id="@+id/tvMathExpression"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/light_steel_blue"
        android:text=""
        android:textSize="50sp"
        app:flow_verticalBias="0.2"
        app:layout_constraintBottom_toTopOf="@+id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>